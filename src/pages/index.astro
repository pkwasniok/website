---
import Section from "../components/Section.astro";
import Shield from "../components/Shield.astro";

const links = {
	upwork: "https://www.upwork.com/freelancers/~013f291d0612995d23?mp_source=share",
	github: "https://github.com/pkwasniok",
	linkedin: "https://www.linkedin.com/in/patryk-kwa%C5%9Bniok-728614215/",
	twitter: "https://x.com/pkwasniok",
}
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Patryk Kwaśniok</title>
	</head>

	<body class="flex flex-col items-center p-4 bg-black text-white">
		<div class="max-w-[800px] w-full flex flex-col gap-14 items-start">
			<div id="header">
				<h1 class="text-3xl font-bold">Patryk Kwaśniok</h1>
				<span class="uppercase font-bold">Software developer</span>
			</div>

			<Section title="// 01 Links">
				<div class="flex flex-row items-center gap-4">
					<Shield icon="upwork" href={links.upwork}>Upwork</Shield>
					<Shield icon="github" href={links.github}>Github</Shield>
					<Shield icon="linkedin" href={links.linkedin}>Linkedin</Shield>
					<Shield icon="x" href={links.twitter}>Twitter</Shield>
				</div>
			</Section>

			<Section title="// 02 About">
				<p>
					Hello! My name is Patryk and I’m software developer from Poland. I mostly work <br>
					with javascript-based technologies like React and Node but I also have some <br>
					experience in dekstop applications and embedded systems.
				</p>
			</Section>

			<Section title="// 03 Portfolio">
				<p>
					TBD
				</p>
			</Section>

			<Section title="// 04 Blog" href="/blog">
				<p>
					TBD
				</p>
			</Section>

			<Section title="// 05 Contact">
				<p>
					TBD
				</p>
			</Section>
		</div>
	</body>
</html>

