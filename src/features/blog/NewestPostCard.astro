---
interface Props {
    href: string;
    title: string;
    description: string;
    publicationDate: Date;
}

const props = Astro.props;

// Format publication date to YYYY-MM-DD string
const publicationDate = props.publicationDate.toISOString().slice(0, 10);
---

<a href={props.href} class="w-full flex flex-row gap-4 p-2 hover:bg-gray-200 hover:text-black hover:border-solid hover:border-gray-200 hover:font-semibold cursor-pointer border border-dashed border-gray-600">
    <div class="w-[128px] aspect-square border"></div>
    <div class="flex-1 flex flex-col gap-2">
        <div class="w-full flex flex-col sm:flex-row items-start sm:items-center justify-between">
            <p>{props.title}</p>
            <p class="text-xs sm:text-sm">{publicationDate}</p>
        </div>
        <p class="text-sm">{props.description}</p>
    </div>
</a>
